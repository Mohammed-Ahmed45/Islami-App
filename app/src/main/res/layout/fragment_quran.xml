<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="IslamiApp.IslamiApp.quran.QuranFragment"
    tools:background="@drawable/bg_islami">

    <ImageView
        android:id="@+id/quran_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/quran_fragment_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_quran"
            android:layout_width="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/quran_image"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/quran_items">
        </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>