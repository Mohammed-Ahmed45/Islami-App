<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="IslamiApp.IslamiApp.tasbeh.TasbehFragment"
    tools:background="@drawable/bg_islami">


    <ImageView
        android:id="@+id/head_sebha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/head_sebha_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="40dp"/>
    <ImageView
        android:id="@+id/sebha_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sebha_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="170dp"
        />
    <TextView
        android:id="@+id/tasbeh_count"
        style="@style/Text_Style2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="عدد التسبيحات"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/sebha_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/tasbeh_conter"
        android:layout_width="69dp"
        android:layout_height="81dp"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/tasbeh_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="@drawable/counter_bg"/>

    <TextView
        android:id="@+id/Azkar_tv"
        style="@style/Text_Style2"
        android:layout_width="138dp"
        android:layout_height="51dp"
        android:background="@drawable/counter_bg"
        app:layout_constraintTop_toBottomOf="@id/tasbeh_conter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        tools:text="سبحان الله"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>